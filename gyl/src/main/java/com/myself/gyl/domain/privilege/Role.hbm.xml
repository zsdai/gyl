<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.myself.gyl.domain.privilege.Role">
		<id name="rid" type="java.lang.Long" length="10">
			<generator class="increment"></generator>
		</id>
		<property name="pid" type="java.lang.Long" length="10"></property>
		<property name="name" length="20"></property>
		<property name="isParent" type="java.lang.Boolean"></property>
		
		<set name="users" table="user_role" lazy="false">
			<key>
				<column name="rid"></column>
			</key>
			<many-to-many class="com.myself.gyl.domain.basedata.User" column="uid"></many-to-many>
		</set>
		<set name="privileges" table="role_privilege">
			<key>
				<column name="rid"></column>
			</key>
			<many-to-many class="com.myself.gyl.domain.privilege.Privilege" column="id"></many-to-many>
		</set>
	</class>
</hibernate-mapping>